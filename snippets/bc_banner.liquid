            body #cookie-banner_flag {
                position: fixed;
                top: 70vh;
                z-index: 2147483647;
                background-color: #fff;
                padding: 0px;
                left: 4px;
                border-radius: 14px;
                width: 28px;
                max-width: 28px;
                height: 28px;
                text-align: center;
                cursor: pointer;
                box-shadow: #0006 0px 0px 4px;
                transform: rotate(0deg);
                display: flex;
                opacity: 0;
            }
            body #cookie-banner_flag__fingerprint{
                width: 100%;
                height: 100%;
                position: relative;
                z-index: 2147483647;
                background-color: #fff;
                border-radius: 14px;
                padding: 2px;
            }
            body #cookie-banner_flag__infotext{
                height: 28px;
                line-height: 28px;
                background-color: #fff;
                color: black;
                border-radius: 14px;
                padding: 1px 14px 0 35px;
                box-shadow: #0006 0px 0px 4px;
                position: absolute;
                top: 0px;
                left: -20px;
                z-index: 1;
                width: 100px;
                opacity: 0;
                transform: rotate3d(0, -1, 0, 90deg);
                transition: all 0.5s;
            }
            body #cookie-banner_flag:hover > #cookie-banner_flag__infotext{
                left: 0;
                width: 100px;
                opacity: 1;
                transform: rotate3d(0, 0, 0, 0deg);
                transition: all 0.5s;
                min-width: fit-content;
            }
        </style>

