        <div id="banner-wrapper" hidden="hidden" style="opacity: 0; display: none; visibility: hidden; top: 0px; left: 0px;">
            <style>{{ data['bc_cookie_banner_css'] }}</style>

            <div class="overlay_bc_banner">
                <div class="banner-body">
                    <div class="banner-body__content">
                        <div class="banner-header">
                            <div class="banner-logo">
                                {% if bc_cookie_banner_settings.body.content.header.logo.settings.src != '' %}
                                    <img class="logo"
                                         src="{{ bc_cookie_banner_settings.body.content.header.logo.settings.src }}"
                                         alt="{{ bc_cookie_banner_settings.body.content.header.logo.settings.alt }}">
                                {% endif %}
                            </div>
                            <div class="banner-header__title">
                                <p>{{ bc_cookie_banner_header.title }}</p>
                            </div>
                        </div>
                        <div class="banner-main">
                            <div class="banner-main_header">
                                <p>{{ bc_cookie_banner_main.primary }}</p>
                                <p>{{ bc_cookie_banner_main.secondary }}</p>
                            </div>
                            <div class="banner-main_header list-type">
                                <p>{{ bc_cookie_banner_main.essential_button }}</p>
                                <p>{{ bc_cookie_banner_main.marketing_button }}</p>
                            </div>
                            <div class="banner-main_buttons">
                                <p id="all_accept" class="btn-accept">
                    <span class="btn-btn btn-btn-accept-all cursor" data-cookie-accept-all="">
                      {{- bc_cookie_banner_main.buttons.accept -}}
                    </span>
                                </p>
                                <p id="essential_accept" class="btn-accept">
                    <span class="btn-btn btn-btn-save cursor" data-cookie-save="">
                      {{- bc_cookie_banner_main.buttons.save -}}
                    </span>
                                </p>
                                <p class="btn-manage cursor">
                                    {{  bc_cookie_banner_main.buttons.edit }}</p>

                                <p class="btn-accept btn-manage__save cursor" hidden>{{ bc_cookie_banner_main.buttons.save_close }}</p>
                            </div>

                        </div>

                        <div class="tabs" hidden="hidden">

                            <div class="cookie_tab__wrapper_header">
                                <p id="countEssentials">
                                    <strong>{{  bc_cookie_banner_main.essential_button }}</strong>
                                    <strong class="counter"></strong>
                                </p>
                                <p>{{  bc_cookie_banner_main.essential }}</p>
                                <details>
                                    <summary id="summary_essential" style="cursor: pointer;">{{  bc_cookie_banner_main.details }}</summary>
                                    <div class="cookie_tab__wrapper essential display"></div>
                                </details>


                            </div>

                            <div class="cookie_tab__wrapper_header">
                                <p id="countMarketing">
                                    <strong>{{  bc_cookie_banner_main.marketing_button }}</strong>
                                    <strong class="counter"></strong>
                                </p>
                                <p>{{  bc_cookie_banner_main.marketing }}</p>
                                <div class="toggle">
                                    <label for="input_all_cookies">
                                        <input name="all_cookies" id="input_all_cookies" type="checkbox"><span class="slider"></span>
                                    </label>
                                </div>
                                <p style="height: 1.2em;"></p>
                                <details>
                                    <summary id="summary_marketing" style="cursor: pointer;">{{  bc_cookie_banner_main.details }}</summary>
                                    <div class="cookie_tab__wrapper marketing display"></div>
                                </details>

                            </div>

                        </div>

                        <div style="text-align: center; font-size: 0.7em; color: #7d7d7d;">
                            <a href="https://gdpr-legal-cookie.myshopify.com/" rel="nofollow" style="color: #7d7d7d;">beeclever GDPR legal Cookie</a>
                        </div>
                        <div class="banner-footer">
                            {% if bc_cookie_banner_footer.content.link_1.link.size > 0 %}
                  <a href="{{ bc_cookie_banner_footer.content.link_1.link }}">
                    {{- bc_cookie_banner_footer.content.link_1.text -}}
                  </a>
                            {% endif %}

                            {% if bc_cookie_banner_footer.content.link_2.link.size > 0 %}
                  <a href="{{ bc_cookie_banner_footer.content.link_2.link }}">
                    {{- bc_cookie_banner_footer.content.link_2.text -}}
                  </a>
                            {% endif %}

                            {% if bc_cookie_banner_footer.content.link_3.link.size > 0 %}
                  <a href="{{ bc_cookie_banner_footer.content.link_3.link }}">
                    {{- bc_cookie_banner_footer.content.link_3.text -}}
                  </a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
{% endunless %}
