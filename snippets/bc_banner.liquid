{% comment %} V 2.0.0 {% endcomment %}

{% unless request.design_mode %}

    {% assign data = shop.metafields.bc_cookie %}

    {% assign cookieData = null %}
    {% if data.bc_cookie_list.value == blank -%}
      {%- assign cookieData = data.bc_cookie_list -%}
    {%- else -%}
      {%- assign cookieData = data.bc_cookie_list.value -%}
    {%- endif %}

    {% assign bc_cookie_banner_header = null %}
    {% if data.bc_cookie_banner_header.value == blank -%}
      {%- assign bc_cookie_banner_header = data.bc_cookie_banner_header -%}
    {%- else -%}
      {%- assign bc_cookie_banner_header = data.bc_cookie_banner_header.value -%}
    {%- endif %}

    {% assign bc_cookie_banner_main = null %}
    {% if data.bc_cookie_banner_main.value == blank -%}
      {%- assign bc_cookie_banner_main = data.bc_cookie_banner_main -%}
    {%- else -%}
      {%- assign bc_cookie_banner_main = data.bc_cookie_banner_main.value -%}
    {%- endif %}

    {% assign bc_cookie_banner_settings = null %}
    {% if data.bc_cookie_banner_settings.value == blank -%}
      {%- assign bc_cookie_banner_settings = data.bc_cookie_banner_settings -%}
    {%- else -%}
      {%- assign bc_cookie_banner_settings = data.bc_cookie_banner_settings.value -%}
    {%- endif %}

    {% assign bc_cookie_banner_footer = null -%}
    {%- if data.bc_cookie_banner_footer.value == blank -%}
      {%- assign bc_cookie_banner_footer = data.bc_cookie_banner_footer -%}
    {%- else -%}
      {%- assign bc_cookie_banner_footer = data.bc_cookie_banner_footer.value -%}
    {%- endif %}

    {% if data.size > 0
      and cookieData._bc_c_set.live == '1'
      and content_for_header contains 'beeclever.app\/get-script.php'
    %}
        <script>
            if (typeof BC_JSON_ObjectBypass === "undefined"){
                var BC_JSON_ObjectBypass = {{ cookieData | json }};
            }

        </script>
        <script>
            const data_gdpr_legal_banner_content = {{ bc_cookie_banner_main | json }};
        </script>
